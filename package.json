{
  "name": "electrojet-scripts",
  "version": "0.0.5",
  "description": "Build scripts for use with create-electrojet",
  "bin": {
    "electrojet-scripts": "bin/electrojet-scripts"
  },
  "scripts": {
    "format": "prettier --write **/*.{js,json} && standard --fix",
    "lint": "standard",
    "test": "jest",
    "watch": "jest --watch",
    "snapupdate": "jest --updateSnapshot",
    "coverage": "jest --coverage"
  },
  "files": [
    "bin",
    "src"
  ],
  "license": "MIT",
  "dependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "babel-loader": "^8.0.4",
    "chalk": "^2.4.1",
    "cosmiconfig": "^5.0.7",
    "cross-spawn": "^6.0.5",
    "css-loader": "^2.1.0",
    "fs-jetpack": "^2.2.0",
    "html-loader": "^0.5.5",
    "html-webpack-loader": "0.0.5",
    "html-webpack-plugin": "^3.2.0",
    "meow": "^5.0.0",
    "mini-css-extract-plugin": "^0.5.0",
    "npm-run-all": "^4.1.5",
    "style-loader": "^0.23.1",
    "webpack": "^4.28.3",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.14",
    "webpack-merge": "^4.1.5",
    "which": "^1.3.1"
  },
  "devDependencies": {
    "jest": "^23.6.0",
    "prettier": "^1.12.1",
    "standard": "^12.0.1"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BoyWithSilverWings/electrojet-scripts"
  },
  "bugs": {
    "url": "https://github.com/BoyWithSilverWings/electrojet-scripts/issues"
  }
}
